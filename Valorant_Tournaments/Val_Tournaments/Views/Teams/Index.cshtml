@page
@{
    var teams = (List<TeamModel>)ViewBag.teams;
    @*var teams = (dynamic)ViewBag.teams;*@

}
<!-- Navigation-->
<nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
    <div class="container px-4 px-lg-5">
        <a class="navbar-brand" href="#page-top">Tournaments.GG</a>
        <button class="navbar-toggler navbar-toggler-right" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
            Menu
            <i class="fas fa-bars"></i>
        </button>
        <div class="collapse navbar-collapse" id="navbarResponsive">
            <ul class="navbar-nav ms-auto">

                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" asp-area="" asp-controller="Tournaments" asp-action="Index">Tournaments</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link " asp-area="" asp-controller="Teams" asp-action="Index">Teams</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
<div class="signup-section d-flex justify-content-center">
    <div class="container bg-light p-5 mb-2 rounded ">
        <div class="col-md-12">
            <table id="myTable" class="table-striped table-bordered table-hover">
                <thead class="bg-dark text-light" >
                    <tr>
                        <th width="200">Name</th>
                        <th>Region</th>
                        <th width="150">Players</th>
                        <th width="150"></th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var team in teams)
                    {
                        <tr>
                            <td>@team.Name</td>
                            <td>@team.Region</td>
                            <td class="col-md-5">
                                <ul>
                                    @foreach (var plyr in team.Current_Roster)
                                    {
                                        <li>@plyr </li>
                                    }
                                </ul>

                            </td>
                            <td><img src="@team.Logo" alt="team logo" width="100px" height="=100px" /></td>

                        </tr>

                    }

                </tbody>
            </table>

        </div>

    </div>

</div>

<script>$(document).ready(function () {
        $('#myTable').DataTable();
    });</script>

